<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
         metadata-complete="true">

	<display-name>Loader</display-name>

	<listener>
		<listener-class>ca.datamagic.accounting.servlet.AccountingContextListener</listener-class>
	</listener>
	
	<servlet>
        <servlet-name>CronAPI</servlet-name>
        <servlet-class>ca.datamagic.accounting.servlet.CronAPIServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServiceAPI</servlet-name>
        <servlet-class>ca.datamagic.accounting.servlet.ServiceAPIServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>SwaggerUI</servlet-name>
        <servlet-class>ca.datamagic.accounting.servlet.SwaggerUIServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>SwaggerResources</servlet-name>
        <servlet-class>ca.datamagic.accounting.servlet.SwaggerResourcesServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>SwaggerAPI</servlet-name>
        <servlet-class>ca.datamagic.accounting.servlet.SwaggerAPIServlet</servlet-class>
    </servlet>
	<servlet-mapping>
        <servlet-name>CronAPI</servlet-name>
        <url-pattern>/api/cron/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServiceAPI</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>SwaggerUI</servlet-name>
        <url-pattern>/swagger-resources/configuration/ui</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>SwaggerResources</servlet-name>
        <url-pattern>/swagger-resources</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>SwaggerAPI</servlet-name>
        <url-pattern>/v2/api-docs</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>swagger-ui.html</welcome-file>
    </welcome-file-list>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>cron</web-resource-name>
			<url-pattern>/api/cron/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
</web-app>

